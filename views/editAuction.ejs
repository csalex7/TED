<% include partials/header.ejs %>


<div class="container">
	<h2 style="text-align: center; color: black;">Edit <%= auctions.name %></h2>
	<div style="width: 30%; margin: 20px auto;">
		<form action="/auctions/ <%= auctions._id %>?_method=PUT" method="POST">
		
		
		
			<div class="form-group">
					<input class="form-control" type="text" name="auctions[name]" placeholder = "New name">
			</div>
			
			<div class="form-group">
					<input class="form-control" type="text" name="auctions[category]" placeholder = "New category">
			</div>
			
			<div class="form-group">
					<input class="form-control" type="number" name="auctions[Buy_Price]" placeholder = "Buy price">
			</div>
			
			<div class="form-group">
					<input class="form-control" type="number" name="auctions[First_Bid]" placeholder = "First bid">
			</div>
		
			
			
			
			
			
			
			<div class="form-group">
				<button class="btn btn-sm btn-success btn-default btn-block" >Update</button>
			</div>
		</form>
		<a class="btn btn-sm btn-primary btn-default" href="/auctions">Go Back</a>
	</div>
</div>	

<% include partials/footer.ejs %>
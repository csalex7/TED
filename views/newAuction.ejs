<% include partials/header.ejs %>



<div class="container">
	<h2 style="text-align: center; color: black;">Start new action</h2>
	<div style="width: 30%; margin: 20px auto;">
		<form action = "/auctions" method = "POST">
		
		
			<div class="form-group" id="testform">
					<input class="form-control" type="text" name="name" placeholder = "Name">
			</div>
			
			
			<div class="form-group">
				<select class="form-control selectpicker show-tick" name="category">
  					<option>Home</option>
  					<option>Fashion</option>
  					<option>Health</option>
  					<option>Sports</option>
					
					<option>Books</option>
  					<option>Movies</option>
  					<option>Toys</option>
  					<option>Electronics</option>
					
					<option>Art</option>
  					<option>Houses</option>
				</select>
			</div>
			
			
			<div class="form-group">
					<input class="form-control" type="number" name="Buy_Price" placeholder = "Buy price">
			</div>
			
			<div class="form-group">
					<input class="form-control" type="number" name="First_Bid" placeholder = "First bid">
			</div>
		
			
			<div class="form-group">
				<input class="form-control" type="text" name="Location" placeholder = "Location">
			</div>
			
			<div class="form-group">
				<input class="form-control" type="text" name="Country" placeholder = "Country">
			</div>
			
			<div class="form-group">
				<input class="form-control" type="date" name="Ends" placeholder = "Ends Date">
			</div>
			
			<div class="form-group">
					<input class="form-control" type="text" name="Image" placeholder="Image url">
			</div>
			
			<div class="form-group">
					<input class="form-control" type="text" name="Description" placeholder="Description">
			</div>
			
			
			
			
			<div class="form-group">
				<button class="btn btn-sm btn-success btn-default btn-block" >Start</button>
			</div>
		</form>
		<a class="btn btn-sm btn-primary btn-default" href="/">Go Back</a>
	</div>
</div>	

<% include partials/footer.ejs %>